<!-- contact.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
    }

    .container {
      text-align: center;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-top: 20px;
      max-width: 600px;
    }

    h1 {
      color: #333;
      margin-bottom: 20px;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    label {
      margin-top: 15px;
      font-weight: bold;
    }

    input, textarea {
      width: 100%;
      padding: 10px;
      margin-top: 8px;
      margin-bottom: 20px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    button {
      background-color: #007bff;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    }

    button:hover {
      background-color: #0056b3;
    }

    .contact-info {
      margin-top: 20px;
      color: #555;
      line-height: 1.6;
    }

    /* Estilos para el bloque de navegación */
    nav {
      margin-top: 20px;
    }

    nav ul {
      list-style: none;
      padding: 0;
      display: flex;
      justify-content: center;
    }

    nav li {
      margin-right: 15px;
    }

    nav a.button {
      text-decoration: none;
      color: white;
      font-weight: bold;
      font-size: 16px;
      padding: 10px 15px;
      border-radius: 4px;
      background-color: #333;
      transition: background-color 0.3s ease-in-out;
    }

    nav a.button:hover {
      background-color: #555;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1><%= title %></h1>
    <form action="/contact" method="post">
      <label for="name">Nombre:</label>
      <input type="text" id="name" name="name" required>

      <label for="email">Correo Electrónico:</label>
      <input type="email" id="email" name="email" required>

      <label for="comments">Comentarios:</label>
      <textarea id="comments" name="comments" rows="4" required></textarea>

      <button type="submit">Enviar</button>
    </form>

    <div class="contact-info">
      <p>Dirección: Tu Dirección, Ciudad, País</p>
      <p>Teléfono: +XX XXXX-XXXX</p>
    </div>

    <!-- Enlaces a otras páginas -->
    <nav>
      <ul>
        <li><a href="/" class="button">Inicio</a></li>
        <li><a href="/about" class="button">Acerca de Nosotros</a></li>
        <li><a href="/submit" class="button">Enviar Datos</a></li>
      </ul>
    </nav>
  </div>
</body>
</html>
